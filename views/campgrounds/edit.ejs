<% include ../partials/header%>
<div id="container">
    <h1 style="text-align: center">Edit <%=camp.name%></h1>
    <div id="new-camp">
        <form action="/campgrounds/<%=camp.id%>/edit" method="post" >
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" id="name" name="campground[name]" value="<%=camp.name%>">
            </div>
            <div class="form-group">
                <label for="image">Image url</label>
                <input class="form-control" type="text" id="image" name="campground[image]" value="<%=camp.image%>">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" name="campground[description]" class="form-control"><%=camp.description%></textarea>
                <!--<input class="form-control" type="text" id="description" name="description" placeholder="Scribe your thoughts about the ground ...">-->
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds" ><button class="btn btn-danger btn-block" style="width: 300px">Cancel</button></a>
    </div>
</div>

<% include ../partials/footer%>